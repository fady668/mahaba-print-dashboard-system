{
  "version": 2,
  "builds": [
    {
      "src": "backend/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/build/**/*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ]
}